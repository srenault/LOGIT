# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET     /                                             controllers.Application.index()
POST    /signup                                       controllers.Application.signup()
POST    /signin                                       controllers.Application.signin()
GET     /logout                                       controllers.Application.logout()

GET     /projects                                     controllers.Projects.index()
GET     /projects/all                                 controllers.Projects.projects()
GET     /projects/:name                               controllers.Projects.project(name)
GET     /projects/:name/logs                          controllers.Projects.logs(name)
POST    /projects/:name/logs                          controllers.Projects.addUpLog(name)

GET     /dashboard                                    controllers.users.Users.index()
POST    /users/:pseudo/follow/:name                   controllers.users.Users.follow(pseudo, name)
POST    /users/:pseudo/debug/:name                    controllers.users.Users.debug(pseudo, name)

GET     /users/:pseudo/projects/fw/all                controllers.users.projects.Followed.list(pseudo)
GET     /users/:pseudo/projects/fw/:name              controllers.users.projects.Followed.view(pseudo, name)
GET     /users/:pseudo/projects/fw/:name/logs/:logID  controllers.users.projects.Followed.readLog(pseudo, name, logID)
GET     /users/:pseudo/projects/fw/:name/logs         controllers.users.projects.Followed.logs(pseudo, name)

GET     /users/:pseudo/projects/db/all                controllers.users.projects.Debugged.list(pseudo)
GET     /users/:pseudo/projects/db/:name              controllers.users.projects.Debugged.view(pseudo, name)
POST    /users/:pseudo/projects/db/:name/logs         controllers.users.projects.Debugged.eval(pseudo, name)
GET     /users/:pseudo/projects/db/:name/logs/:logID  controllers.users.projects.Debugged.readLog(pseudo, name, logID)
GET     /users/:pseudo/projects/db/:name/logs         controllers.users.projects.Debugged.logs(pseudo, name)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)